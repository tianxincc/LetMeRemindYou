                        <ResourceDictionary Source="pack://application:,,,/Resources/Basic/Colors/Colors.xaml"/>
                        <ResourceDictionary Source="pack://application:,,,/Resources/Basic/Colors/ColorsDark.xaml"/>
                        <ResourceDictionary Source="pack://application:,,,/Resources/Basic/Basic.xaml"/>
                        <ResourceDictionary Source="pack://application:,,,/Resources/Basic/Brushes.xaml"/>
                        <ResourceDictionary Source="pack://application:,,,/Resources/Basic/Fonts.xaml"/>
                        <ResourceDictionary Source="pack://application:,,,/Resources/Basic/Geometries.xaml"/>
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
